#!/usr/bin/env bash

ROOT="$( cd "$( dirname "${BASH_SOURCE[0]}" )"/.. && pwd )"

# import libraries
. "${ROOT}"/bin/lib/env.sh
. "${ROOT}"/docker/lib/docker_host_user_id.sh
. "${ROOT}"/docker/lib/images.sh

# initialize network
. "${ROOT}"/docker/bin/init/network.sh

# execute php command
docker run \
    --link web:behatgoogleplaceautocomplete.local \
    --net ${PROJECT_NAME}_default ${ENV} \
    --rm \
    -e LOCAL_USER_ID=$DOCKER_HOST_USER_ID \
    -i \
    -t \
    -v $(pwd):/workdir \
    -v ~/.composer:/home/user/.composer \
    -v ~/.ssh:/home/user/.ssh \
    ${PHP_IMAGE} php "$@"
